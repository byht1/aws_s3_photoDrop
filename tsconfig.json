{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": ["drizzle-orm"]
}
